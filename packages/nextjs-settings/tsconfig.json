{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",                         // Root folder for TypeScript source files
    "outDir": "./dist",                         // Output folder for compiled JS

    // Environment Settings
    "target": "ES2022",                          // JavaScript version output
    "module": "ESNEXT",                          // Module system to output, safe for Node + Next.js
    
    "moduleResolution": "node",
    "types": ["node", "react", "react-dom"],     // Include Node type definitions for globals like 'require'
    // "lib": ["esnext"],                        // Not needed; target ES2022 is sufficient

    // Other Outputs
    "sourceMap": true,                           // Generate source maps for debugging
    "declaration": true,                         // Generate TypeScript declaration files (.d.ts)
    "declarationMap": true,                      // Generate maps for declaration files

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,            // Forces undefined checks when accessing object keys
    "exactOptionalPropertyTypes": true,          // Makes optional properties behave strictly
    "esModuleInterop": true,                      // Allows default imports from CommonJS modules like `ioredis`

    // Style Options
    // "noImplicitReturns": true,                // Optional: ensures all code paths return a value
    // "noImplicitOverride": true,               // Optional: TypeScript 4.3+ override checking
    // "noUnusedLocals": true,                   // Optional: warns about unused local variables
    // "noUnusedParameters": true,               // Optional: warns about unused function parameters
    // "noFallthroughCasesInSwitch": true,       // Optional: prevents fallthrough in switch statements
    // "noPropertyAccessFromIndexSignature": true, // Optional: stricter property access for index signatures

    // Recommended Options
    "strict": true,                              // Enables all strict type checking options
    "jsx": "react-jsx",                          // Only needed if the package contains JSX; otherwise can be removed
    "forceConsistentCasingInFileNames": true,
    // "verbatimModuleSyntax": true,             // Not recommended for CommonJS; causes ESM import errors
    "isolatedModules": true,                     // Ensures each file can be transpiled independently
    "noUncheckedSideEffectImports": true,       // Warns about imports that may have side effects
    "moduleDetection": "force",                  // Helps TS detect module boundaries; generally safe
    "skipLibCheck": true,                        // Skips type checks for node_modules, speeds up compilation
    "allowSyntheticDefaultImports": true         // Allows default imports from CommonJS modules
  },
  "include": ["src" ],
  "exclude": ["**/examples"]
}
